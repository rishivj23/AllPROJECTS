<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

  <link rel='stylesheet' href='/stylesheets/style.css' />

</head>

<body>



  <div class="container" style="border: 2px solid black; text-align: center; width: 50%; padding: 40px;">

    <form action="/" id="EmployeeForm" method="post">

      <div id="signupalert" style="display:none" class="alert alert-danger">
        <p>Error:</p>
        <span></span>
      </div>

      <div class="form-group" style="display: flex;">

        <label
          style="  width:90px;height:35px; font-size: 20px; text-align: right; padding: 5px;  padding-right: 0;">Name:</label>
        <input type="text" class="form-control" name="uname" placeholder="Enter Your Name" style="margin-left: 30px;">
      </div>


      <div class="form-group" style="display: flex;">
        <label for="email"
          style="  width:90px; height:35px;font-size: 20px; text-align: right; padding: 5px;  padding-right: 0;">Rollno:</label>

        <input type="text" class="form-control" name="roll" placeholder="Enter Roll no" style="margin-left: 30px;">
      </div>



      <div class="form-group" style="display: flex;">
        <label for="lastname"
          style="  width:90px;height:35px; font-size: 20px; text-align: right; padding: 5px;  padding-right: 0;">Email:</label>

        <input type="text" class="form-control" name="email" placeholder="Enter your email" style="margin-left: 30px;">

      </div>


      <div class="form-group" style="display: flex;">
        <label for="password"
          style=" width:90px;height:35px;font-size: 20px;text-align: right; padding: 5px; padding-right: 0;">DOB:</label>

        <input type="text" class="form-control" name="dob" placeholder="Enter your DOB" style="margin-left: 30px;">

      </div>

      <div class="form-group" style="display: flex;">
        <label for="icode"
          style="  width:120px; height:35px;font-size: 20px; text-align: left;padding: 5px;padding-right: 0;">
          Address:</label>

        <input type="text" class="form-control" name="address" placeholder="Enter your Address"
          style="margin-left: 6px;">

      </div>


      <div class="form-group">
        <!-- Button -->
        <div class="col-md-offset-3 col-md-9">
          <input type="submit" name="submit" value="submit" class="btn btn-primary">
        </div>
      </div>





    </form>
  </div>


  <div class="container-fluid" style="margin-top: 40px; text-align: center;">
    <h1 style="text-align: center;">Filter Student Records</h1>
    <form action="/search/" method="post">
      <div>
        <label style="margin: 20px;"> By Name:</label> <input type="text" name="byname" style="font-size: 20px;">
        <label style="margin: 20px;"> By Rollno:</label> <input type="text" name="byroll" style="font-size: 20px;">
        <label style="margin: 20px;"> By Address:</label> <input type="text" name="byaddress" style="font-size: 20px;">
        <input type="submit" class="btn btn-primary" name="submit" style="margin-left: 20px;">
      </div>
    </form>
  </div>




  <div class="container " style="margin-top: 40px;">
    <h1 style="text-align: center;"><%= title %></h1>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Rollno</th>
          <th>Email</th>
          <th>DOB</th>
          <th>Address</th>
        </tr>
      </thead>
      <%if (records.length > 0 ){ %>
      <% records.forEach(function(row){ %>
      <tr>
        <td><%= row.Name %></td>
        <td><%= row.Rollno %></td>
        <td><%= row.email %></td>
        <td><%= row.DOB %></td>
        <td><%= row.Address %></td>
      </tr>
      <% })} else{ %>
      <tr>
        <td>No Record Found</td>
      </tr>
      <%  } %>
    </table>
  </div>










  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
    integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
    crossorigin="anonymous"></script>
</body>

</html>